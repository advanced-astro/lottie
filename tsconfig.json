{
    "compilerOptions": {
        "outDir": "dist",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "module": "es2020",
        "target": "es2020",
        "declaration": true
    },
    "include": [
        "src"
    ]
}
